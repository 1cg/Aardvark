<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.gosu-lang.aardvark</groupId>
  <artifactId>aardvark-core</artifactId>
  <version>0.4-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>Aardvark :: Core</name>

  <parent>
    <groupId>org.gosu-lang.aardvark</groupId>
    <artifactId>aardvark</artifactId>
    <version>0.4-SNAPSHOT</version>
    <relativePath>..</relativePath>
  </parent>

  <properties>
    <antDep.groupId>org.apache.ant</antDep.groupId>
    <antDep.version>1.8.2</antDep.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-antlr</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-apache-bcel</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-apache-bsf</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-apache-log4j</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-apache-oro</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-apache-regexp</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-apache-resolver</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-apache-xalan2</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-commons-logging</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-commons-net</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-jai</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-javamail</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-jdepend</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-jmf</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-jsch</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-junit</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-netrexx</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-swing</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>${antDep.groupId}</groupId>
      <artifactId>ant-testutil</artifactId>
      <version>${antDep.version}</version>
    </dependency>
    <dependency>
      <groupId>org.gosu-lang.aardvark</groupId>
      <artifactId>aardvark-launcher</artifactId>
      <version>0.4-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.easytesting</groupId>
      <artifactId>fest-assert</artifactId>
      <version>1.4</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src</sourceDirectory>
    <testSourceDirectory>test</testSourceDirectory>
    <resources>
      <resource>
        <directory>src</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
    </resources>
    <testResources>
      <testResource>
        <directory>test</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </testResource>
    </testResources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.gosu-lang</groupId>
        <artifactId>maven-gosu-plugin</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>insert-gosu-artifact</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <gosuVersion>0.9-SNAPSHOT</gosuVersion>
          <includeImpl>true</includeImpl> <!-- this is in order to have jline -->
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
